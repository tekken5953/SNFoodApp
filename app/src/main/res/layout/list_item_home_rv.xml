<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginBottom="7dp"
    android:background="@drawable/list_item_home_rv_bg"
    android:backgroundTint="@color/black">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="15dp"
        android:elevation="8dp"
        app:cardCornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/listItemHomeRvProfileIv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher_round" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/listItemHomeRvNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/pretendardvariable"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/cardView"
        app:layout_constraintTop_toTopOf="@+id/cardView" />

    <ImageView
        android:id="@+id/listItemHomeRvRateIv"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="5dp"
        android:src="@drawable/star"
        app:layout_constraintBottom_toBottomOf="@+id/listItemHomeRvNameTv"
        app:layout_constraintStart_toEndOf="@+id/listItemHomeRvNameTv"
        app:layout_constraintTop_toTopOf="@id/listItemHomeRvNameTv"
        app:tint="@color/yellow" />

    <TextView
        android:id="@+id/listItemHomeRvRateTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:fontFamily="@font/pretendardvariable"
        android:text="4.5"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/listItemHomeRvRateIv"
        app:layout_constraintStart_toEndOf="@+id/listItemHomeRvRateIv"
        app:layout_constraintTop_toTopOf="@id/listItemHomeRvRateIv" />

    <TextView
        android:id="@+id/listItemHomeRvAddressTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/pretendardvariable"
        android:text="Address"
        android:textColor="#77000000"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/listItemHomeRvNameTv"
        app:layout_constraintTop_toBottomOf="@+id/listItemHomeRvNameTv" />

    <ImageView
        android:id="@+id/listItemHomeRvBookmarkIv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/bookmark_fill"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    
</androidx.constraintlayout.widget.ConstraintLayout>